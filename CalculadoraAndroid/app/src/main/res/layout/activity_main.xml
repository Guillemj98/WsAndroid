<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_10"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="373dp"
        android:layout_height="145dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="16dp"
        android:gravity="end"
        android:text="Resultado"
        android:textColor="#333333"
        android:textSize="70sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/buttonsGrid"
        android:layout_width="287dp"
        android:layout_height="430dp"
        android:layout_margin="0dp"
        android:columnCount="4"
        android:rowCount="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resultTextView"
        app:layout_constraintVertical_bias="0.5">


        <Button
            android:id="@+id/buttonClear"
            android:layout_width="63dp"
            android:layout_height="67dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_margin="4dp"
            android:backgroundTint="#DD5D5D"
            android:text="C"
            android:textColor="#000000"
            android:textSize="24sp"/>


        <Button
            android:id="@+id/buttonSumar"
            android:layout_width="63dp"
            android:layout_height="67dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="4dp"
            android:backgroundTint="#DD5D5D"
            android:text="+"
            android:textColor="#000000"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonRestar"
            android:layout_width="63dp"
            android:layout_height="67dp"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_margin="4dp"
            android:backgroundTint="#DD5D5D"
            android:text="-"
            android:textColor="#000000"
            android:textSize="24sp" />


        <Button
            android:id="@+id/buttonMultiplicar"
            android:layout_width="63dp"
            android:layout_height="67dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_margin="4dp"
            android:backgroundTint="#EB6868"
            android:text="Ã—"
            android:textColor="#000000"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonDivision"
            android:layout_width="63dp"
            android:layout_height="67dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_margin="4dp"
            android:backgroundTint="#DD5D5D"
            android:text="/"
            android:textColor="#000000"
            android:textSize="24sp" />


        <Button
            android:id="@+id/button1"
            android:layout_width="63dp"
            android:layout_height="67dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="4dp"
            android:backgroundTint="#FFFFFF"
            android:text="1"
            android:textColor="#333333"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="63dp"
            android:layout_height="67dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="4dp"
            android:backgroundTint="#FFFFFF"
            android:text="2"
            android:textColor="#333333"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="63dp"
            android:layout_height="67dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_margin="4dp"
            android:backgroundTint="#FFFFFF"
            android:text="3"
            android:textColor="#333333"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="63dp"
            android:layout_height="67dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="4dp"
            android:backgroundTint="#FFFFFF"
            android:text="4"
            android:textColor="#333333"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="63dp"
            android:layout_height="67dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="4dp"
            android:backgroundTint="#FFFFFF"
            android:text="5"
            android:textColor="#333333"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="63dp"
            android:layout_height="67dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_margin="4dp"
            android:backgroundTint="#FFFFFF"
            android:text="6"
            android:textColor="#333333"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button7"
            android:layout_width="63dp"
            android:layout_height="67dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_margin="4dp"
            android:backgroundTint="#FFFFFF"
            android:text="7"
            android:textColor="#333333"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="63dp"
            android:layout_height="67dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_margin="4dp"
            android:backgroundTint="#FFFFFF"
            android:text="8"
            android:textColor="#333333"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="63dp"
            android:layout_height="67dp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_margin="4dp"
            android:backgroundTint="#FFFFFF"
            android:text="9"
            android:textColor="#333333"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button0"
            android:layout_width="63dp"
            android:layout_height="67dp"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_margin="4dp"
            android:backgroundTint="#FFFFFF"
            android:text="0"
            android:textColor="#333333"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonIgual"
            android:layout_width="63dp"
            android:layout_height="144dp"
            android:layout_row="2"
            android:layout_rowSpan="3"
            android:layout_column="3"
            android:layout_margin="4dp"
            android:backgroundTint="#DD5D5D"
            android:text="="
            android:textColor="#333333"
            android:textSize="24sp" />


    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
