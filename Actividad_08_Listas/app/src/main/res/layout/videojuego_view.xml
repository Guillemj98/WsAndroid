<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="3dp"
    android:layout_margin="6dp"
    >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp"
        android:background="@color/white"
        android:gravity="center">


        <TextView
            android:id="@+id/idVideojuego"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="ID" />
        <TextView
            android:id="@+id/nombreVideojuego"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="NOMBRE" />

        <TextView
            android:id="@+id/companiaVideojuego"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="COMPANIA"/>

        <TextView
            android:id="@+id/notaVideojuego"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="NOTA" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnEditarVideojuego"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:text="Editar" />

            <Button
                android:id="@+id/btnEliminarUsuario"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:layout_height="wrap_content"
                android:text="Eliminar"
                />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>